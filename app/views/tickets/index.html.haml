.row
  .small-12.columns
    .full-blue-upper-line
    .panel.radius
      = form_tag tickets_path, class: "form-inline", method: :get do
        .row
          .small-12
            %h3
              Filters:
          .small-3.columns
            = select_tag :sprint, options_from_collection_for_select(Sprint.sorted, :id, :name, @sprint)
          .small-3.columns
            = select_tag :project, options_from_collection_for_select(Project.all, :id, :name, params[:project]), prompt: '(Filter Project)'
          .small-3.columns
            = select_tag :user, options_from_collection_for_select(User.all, :id, :name, params[:user]), prompt: '(Filter User)'
          .small-3.columns
            = text_field_tag :description, params[:description], placeholder: 'Description', class: "form-control"


.row
  .small-12.columns
    .full-red-upper-line
    .panel.radius
      = render 'list'
