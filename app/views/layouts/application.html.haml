<!DOCTYPE html>
%html
%head
  %title Zenkai
  = stylesheet_link_tag    'application', media: 'all'
  = javascript_include_tag 'application'
  = csrf_meta_tags
  
  -# Foundation
  = stylesheet_link_tag '/css/foundation.css', type: 'text/css'
  = javascript_include_tag '/js/vendor/custom.modernizr.js'   
  = stylesheet_link_tag 'js/vendor/custom.modernizr.js'
  = stylesheet_link_tag '/js/foundation/foundation.js'
  = stylesheet_link_tag '/js/foundation/foundation.abide.js'
  = stylesheet_link_tag '/js/foundation/foundation.clearing.js'
  = stylesheet_link_tag '/js/foundation/foundation.cookie.js'
  = stylesheet_link_tag '/js/foundation/foundation.dropdown.js'
  = stylesheet_link_tag '/js/foundation/foundation.forms.js'
  = stylesheet_link_tag '/js/foundation/foundation.interchange.js'
  = stylesheet_link_tag '/js/foundation/foundation.joyride.js'
  = stylesheet_link_tag '/js/foundation/foundation.magellan.js'
  = stylesheet_link_tag '/js/foundation/foundation.orbit.js'
  = stylesheet_link_tag '/js/foundation/foundation.placeholder.js'
  = stylesheet_link_tag '/js/foundation/foundation.reveal.js'
  = stylesheet_link_tag '/js/foundation/foundation.section.js'
  = stylesheet_link_tag '/js/foundation/foundation.tooltips.js'
  = stylesheet_link_tag '/js/foundation/foundation.topbar.js'

  -# API de Google para fuentes
  = javascript_include_tag src: 'https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false'
  = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Open+Sans:400,300'


%body{ :class => params[:action] + ' ' + ( (controller_name == 'sessions' || controller_name == 'registrations' || controller_name == 'passwords')? "landing" : "logged" ) }
  - if current_user
    %div
      .top-bar
        %section.top-bar-section
          %ul.nav.navbar-nav
            %li= link_to content_tag(:i, '', class: 'icon-home')+' Home', :root
            %li.divider
            %li= link_to content_tag(:i, '', class: 'icon-ticket')+' My Estimates', user_ticket_estimates_path(user_id: current_user.id)
            %li= link_to content_tag(:i, '', class: 'icon-ticket')+' All Estimates', user_ticket_estimates_path
            %li= link_to content_tag(:i, '', class: 'icon-user')+' Users', users_path
            %li= link_to content_tag(:i, '', class: 'icon-ticket')+' Tickets', tickets_path
            %li= link_to content_tag(:i, '', class: 'icon-archive')+' Projects', projects_path
            %li= link_to content_tag(:i, '', class: 'icon-file-text')+' Reports', report_sprints_path
          %ul.nav.navbar-nav.pull-right
            %li= link_to current_user.full_name, :root
            %li= link_to content_tag(:i, '', class: 'icon-signout')+' Sign Out', destroy_session_path(current_user), method: :delete
  .container
    %div= yield
